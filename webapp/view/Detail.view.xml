<mvc:View xmlns:m="sap.m"
    controllerName="zhrmgmtui5.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:semantic="sap.f.semantic"
	xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout"
	xmlns:upload="sap.m.upload"
	xmlns:u="sap.ui.unified">

     <ObjectPageLayout id="ObjectPageLayout"
		showTitleInHeaderContent="true"
		showEditHeaderButton="true"
		editHeaderButtonPress="handleEditBtnPress"
		upperCaseAnchorBar="false">
		<headerTitle>
			<ObjectPageDynamicHeaderTitle>
				
				<expandedHeading>
					<m:HBox>
						<m:Title text="{JSONModel>/SelectedEmployee/EMP_NAME}" wrapping="true"/>
					</m:HBox>
				</expandedHeading>

				<snappedHeading>
					<m:FlexBox  fitContainer="true" alignItems="Center">
						<m:Avatar src="{JSONModel>/SelectedEmployee/IMG_URL}" class="sapUiTinyMarginEnd"/>
						<m:Title text="{JSONModel>/SelectedEmployee/EMP_NAME}" wrapping="true"/>
					</m:FlexBox>
				</snappedHeading>

				<actions>
					<m:OverflowToolbarButton icon="sap-icon://edit" text="edit header" type="Emphasized" tooltip="edit">
						<m:layoutData>
							<m:OverflowToolbarLayoutData priority="NeverOverflow"/>
						</m:layoutData>
					</m:OverflowToolbarButton>
					<m:OverflowToolbarButton icon="sap-icon://pull-down" text="show section" type="Emphasized" tooltip="pull-down"/>
					<m:OverflowToolbarButton icon="sap-icon://show" text="show state" tooltip="show"/>
					<m:Button text="Toggle Footer" press="toggleFooter"/>
				</actions>
			</ObjectPageDynamicHeaderTitle>
		</headerTitle>

		<headerContent>
			<m:FlexBox wrap="Wrap">
				<m:Avatar class="sapUiSmallMarginEnd" src="{JSONModel>/SelectedEmployee/IMG_URL}"  displaySize="XL" />

					<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
						<m:Link text="+33 6 4512 5158"/>
						<m:Link text="vsdtechno@sap.com"/>
					</layout:VerticalLayout>

					<layout:HorizontalLayout class="sapUiSmallMarginBeginEnd">
						<m:Image src="./test-resources/sap/uxap/images/linkedin.png" height="1em" width="1em" />
						<m:Image src="./test-resources/sap/uxap/images/Twitter.png" class="sapUiSmallMarginBegin"/>
					</layout:HorizontalLayout>

				<layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
					<m:Label text="Hello! I am {JSONModel>/SelectedEmployee/EMP_NAME} and I use SAP"/>
					<m:VBox>
						<m:Label text="Achieved goals"/>
						<m:ProgressIndicator percentValue="70" displayValue="70%"/>
					</m:VBox>
				</layout:VerticalLayout>

				
			</m:FlexBox>
		</headerContent>

		<sections>
			<ObjectPageSection titleUppercase="false" id="goalsSection" title="Employee Details">
				<heading>
					<m:MessageStrip text="All Employess are SAP CAPM Developer" type="Information" />
				</heading>
				<subSections>
					<ObjectPageSubSection>
						<blocks>
							<form:SimpleForm >
                <m:HBox>
                    <m:VBox width="50%" class="sapUiTinyMarginBegin">
                        <m:Label text="Employee Id:"/>
                        <m:Text text="{JSONModel>/SelectedEmployee/EMP_ID}" class="sapUiSmallMarginBottom"/>
                        <m:Label text="Employee Name:"/>
                        <m:Text text="{JSONModel>/SelectedEmployee/EMP_NAME}" class="sapUiSmallMarginBottom"/>
                        <m:Label text="Module:"/>
                        <m:Text text="{JSONModel>/SelectedEmployee/EMP_MODULE/MODULE_NAME} ( {JSONModel>/SelectedEmployee/EMP_MODULE/MODULE_ID} ) " class="sapUiSmallMarginBottom"/>
                    </m:VBox>
                    <m:VBox width="50%" class="sapUiLargeMarginBegin">
                        <m:Label text="Created By:"/>
                        <m:Text text="{JSONModel>/SelectedEmployee/createdBy}" class="sapUiSmallMarginBottom"/>            
                        <m:Label text="Modified By:"/>
                        <m:Text text="{JSONModel>/SelectedEmployee/modifiedBy}" class="sapUiSmallMarginBottom"/>
                         <m:Label text="Created At:"/>
						 <!-- <m:Text text="{JSONModel>/SelectedEmployee/createdAt}" class="sapUiSmallMarginBottom"/> -->
                        <m:Text text="{path : 'JSONModel>/SelectedEmployee/createdAt', type:'sap.ui.model.type.Date', formatOptions: { source : { pattern: 'yyyy-MM-ddTHH:mm:ss.SSSX' }, pattern: 'dd.MM.yyyy' } } "/>
                    </m:VBox>
                </m:HBox>      
            </form:SimpleForm>
                       
            <m:Table id="exportTable" items="{JSONModel>/Project}" autoPopinMode="true" updateFinished="onUpdateFinished"
            mode="SingleSelectMaster" selectionChange="onPOTableItemSelectionChange" >
                <m:headerToolbar>
                    <m:OverflowToolbar>
                        <m:Title text="Projects ({JSONModel>/iCount})"/>
						<m:ToolbarSpacer/>
						<m:Button text="Export" icon="sap-icon://download" press="onDownload"/>
						 <u:FileUploader
							buttonOnly="true"
							id="fileUploader2"
							change="handleDialogUploadPress"
							name="myFileUpload"
							fileType="xlsx,xls"
							buttonText="Upload"
							icon="sap-icon://upload"
							uploadUrl="https://a599057ctrial-dev-zhrmgmt--odata-srv.cfapps.us10-001.hana.ondemand.com/v2/odata/EMPLOYEE"
							tooltip="Upload your file to the local server"
							uploadComplete="handleUploadComplete"/>
						<!-- <m:MenuButton icon="sap-icon://excel-attachment" type="Emphasized">
							<m:menu>
								<m:Menu>
									<m:MenuItem text="Download" icon="sap-icon://download" press="onDownload"/>
									<m:MenuItem text="Upload" icon="sap-icon://upload" press="onUpload" />
								</m:Menu>
							</m:menu>
						</m:MenuButton> -->
                    </m:OverflowToolbar>
                </m:headerToolbar>
                <m:columns>
				<m:Column>
                        <m:Label text="ID"/>
                    </m:Column>
                     <m:Column>
                        <m:Label text="Name"/>
                    </m:Column>
					<m:Column>
                        <m:Label text="Budget"/>
                    </m:Column>
                </m:columns>
                <m:ColumnListItem type="Navigation">
                 
                    <m:Text text="{JSONModel>PRJ_ID}"/>
                    <m:Text text="{JSONModel>PRJ_NAME}"/>
                    <m:Text text="{JSONModel>PRJ_BUDGET}"/>
                </m:ColumnListItem>
            </m:Table>
 
						</blocks>
                        <blocks>
							
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>

			<ObjectPageSection titleUppercase="false" title="Resume" >
				<subSections>
					<ObjectPageSubSection id="personalSectionSS1" title="Resume" titleUppercase="false">
						<blocks>
							 <upload:UploadSet
							 			id="uploadSet"
                                        showIcons="true"
                                        uploadEnabled="true"
                                        terminationEnabled="true"
                                        fileTypes="txt,doc,png,pdf"
                                        maxFileNameLength="30"
                                        maxFileSize="200"
                                        mode="MultiSelect"
                                        beforeUploadStarts="onBeforeUploadStarts"
                                        afterItemAdded="onAfterItemAdded"
                                        selectionChanged="onFileSelectionChange"
                                        uploadUrl="/v2/odata"
										items="{JSONModel>/Resume}"
                                    >
                                        <upload:items>
                                            <upload:UploadSetItem 
                                                fileName="{JSONModel>FILE_NAME}"
                                                mediaType="{JSONModel>MEDIA_TYPE}"
                                                url="{JSONModel>URL}"
                                                openPressed="onLinkPressed"
                                            />
                                        </upload:items>
                                    </upload:UploadSet>
						</blocks>
			        </ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer />
				<m:Button type="Accept" text="Accept"/>
				<m:Button type="Reject" text="Reject"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>

    </mvc:View>