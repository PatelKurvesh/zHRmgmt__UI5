<mvc:View
    controllerName="zhrmgmtui5.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:filterbar="sap.ui.comp.filterbar"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <filterbar:FilterBar
                id="filterbar"
                persistencyKey="myPersKey"
                useToolbar="false"
                search=".onSearch"
                afterVariantLoad=".onAfterVariantLoad"
            >
                <filterbar:filterGroupItems>
                    <filterbar:FilterGroupItem
                        name="SAP Module Type"
                        label="SAP Module Type"
                        groupName="Group1"
                        visibleInFilterBar="true"
                    >
                        <filterbar:control>
                            <ComboBox
                                placeholder="Select SAP Module Type"
                                selectionChange="onModuleTypeChange"
                            >
                                <core:Item text="Technical" />
                                <core:Item text="Functional" />
                            </ComboBox>
                        </filterbar:control>
                    </filterbar:FilterGroupItem>

                    <filterbar:FilterGroupItem
                        name="SAP Module"
                        label="SAP Module"
                        groupName="Group2"
                        visibleInFilterBar="true"
                        visible="{=${JSONModel>/bVisible} ? true:false}"
                    >
                        <filterbar:control>
                            <ComboBox
                                items="{JSONModel>/Module}"
                                placeholder="Select SAP Module"
                                selectionChange="onProjectChange"
                            >
                                <core:Item
                                    key="{JSONModel>MODULE_ID}"
                                    text="{JSONModel>MODULE_NAME}"
                                />
                            </ComboBox>
                        </filterbar:control>
                    </filterbar:FilterGroupItem>
                </filterbar:filterGroupItems>
                <!-- <Button
                    text="Add New Module"
                    press="onAddNewModule"
                /> -->
            </filterbar:FilterBar>

            <Table
                id="projectTable"
                class="sapUiResponsiveContentPadding"
                items="{JSONModel>/Employee}"
                growing="true"
                growingThreshold="{JSONModel>/thresholdCount}"
                selectionChange="onSelectionChange"
                updateFinished="onUpdateFinished"
                mode="SingleSelectMaster"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="Employee ( {JSONModel>/iCount}/{JSONModel>/iEmpCount} )" />
                        <ToolbarSpacer />
                        <!-- <Button
                            text="Delete"
                            icon="sap-icon://delete"
                            type="Emphasized"
                            press="onDelete"
                        /> -->
                        <Button
                            text="Create"
                            icon="sap-icon://add"
                            type="Emphasized"
                            press="onCreateClick"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Employee ID" />
                    </Column>
                    <Column>
                        <Text
                            class="circularImg"
                            text="Employee Image"
                        />
                    </Column>
                    <Column>
                        <Text text="Employee Name" />
                    </Column>
                    <Column>
                        <Text text="Employee Age" />
                    </Column>
                    <Column>
                        <Text text="Employee Module" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{JSONModel>EMP_ID}" />
                            <!-- <Image class="circularImg" src="{JSONModel>IMG_URL}" width="2em" height="2em" ></Image> -->
                            <Avatar src="{JSONModel>IMG_URL}" />
                            <Text text="{JSONModel>EMP_NAME}" />
                            <Text text="{JSONModel>EMP_AGE}" />
                            <Text text="{JSONModel>EMP_MODULE_MODULE_ID}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://drill-down"
                    text="Load More Employee"
                    type="Emphasized"
                    press="onLoadMoreEmployeePress"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
